map \< goto top
map \> goto bottom
map p navigate previous
map b navigate previous
map e follow
map f navigate next
map n navigate next

map <C-+> zoom in
map <C--> zoom out
map <C-)> adjust_window best-fit
map <C-0> adjust_window width
map <C-a> scroll full-left
map <C-b> scroll left
map <C-e> scroll full-right
map <C-f> scroll right
map <C-g> abort
map <C-n> scroll down
map <C-p> scroll up
map <C-v> scroll full-down

map <A-\<> goto top
map <A-\>> goto bottom
map <A-v> scroll full-up

map j set page-right-to-left true

set selection-clipboard clipboard

set font "HackGen 14"

# ページの色設定
set default-fg              "#D8DEE9"
set default-bg              "#2E3440"
#set recolor true #  デフォルトでドキュメントの色を変更する
set recolor-darkcolor       "#D8DEE9"
# set recolor-lightcolor      "#4C566A"
set recolor-lightcolor      "#2E3440"
set highlight-color         "#84a0c6"
set highlight-active-color  "#a093c7"

